{
  "expo": {
    "name": "MotoConnect",
    "slug": "moto-connect-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#040404"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#040404",
          "image": "./assets/images/logo.png",
          "imageWidth": 200
        }
      ],
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/logo.png",
          "color": "#2563eb",
          "sounds": [
            "./assets/notification-sound.wav"
          ]
        }
      ]
    ],
    "android": {
      "package": "com.fiap.motoconnect",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#040404"
      },
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ]
    },
    "ios": {
      "bundleIdentifier": "com.fiap.motoconnect",
      "buildNumber": "1.0.0",
      "supportsTablet": true
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/logo.png"
    },
    "extra": {
      "commitHash": "00a2e5c",
      "eas": {
        "projectId": "383b3cdd-1217-4f2e-8e35-a2e5a3226c82"
      }
    }
  }
}
